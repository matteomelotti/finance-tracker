<table class='table table-striped'>
    <thead>
        <tr>
            <th>Name</th>
            <th>Symbol</th>
            <th>Current price</th>
            <% if current_user.id == @user.id %>
                <th>Actions</th>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <% @user_stocks.each do |user_stock| %>
            <tr>
                <td><%= user_stock.name %></td>
                <td><%= user_stock.ticker %></td>
                <td><%= user_stock.last_price %></td>
                <% if current_user.id == @user.id %>
                    <td><%= link_to 'Delete this stock', user_stock_path(user_stock), method: :delete, data: { confirm: 'Are your sure?'}, class: 'btn btn-xs btn-danger' %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
    
</table>